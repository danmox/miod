<launch>

  <arg name="gui" default="false" />

  <!-- launch gazebo with pile of rubble -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"  value="worlds/rubble.world" />
    <arg name="gui"         value="$(arg gui)" />
    <arg name="verbose"     value="true" />
  </include>

  <!-- image and camera vizualization -->
  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find intel_aero_gazebo)/rviz/intel_aero_test.rviz" />

  <!-- robot 2 -->
  <include file="$(find intel_aero_gazebo)/launch/intel_aero_test.launch" >
    <arg name="agent" value="2" />
  </include>


</launch>
